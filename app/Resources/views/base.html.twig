<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}Framaslides{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('strut.bundle.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
<script src="https://framasoft.org/nav/nav.js" type="text/javascript"></script>
{% if app.user %}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('presentations') }}">
                {{ 'app.name' | trans() | raw }}
            </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item" data-toggle="tooltip" data-placement="bottom" title="{{ 'menu.newpresentation' | trans }}"><a class="nav-link" href="{{ path('app') }}"><i class="glyphicon glyphicon-plus" ></i></a></li>
                {{ render(controller('Strut:Presentation:searchForm', {'currentRoute': app.request.attributes.get('_route')})) }}
                <li class="nav-item" data-toggle="tooltip" data-placement="bottom" title="{{ 'menu.mypresentations.desc' | trans }}"><a class="nav-link" href="{{ path('presentations') }}">{{ 'menu.mypresentations' | trans }}</a></li>
                <li class="nav-item" data-toggle="tooltip" data-placement="bottom" title="{{ 'menu.pictures.desc' | trans }}"><a class="nav-link" href="{{ path('pictures') }}">{{ 'menu.pictures' | trans }}</a></li>
                <li class="nav-item" data-toggle="tooltip" data-placement="bottom" title="{{ 'menu.config' | trans }}"><a class="nav-link glyphicon glyphicon-cog" href="{{ path('config') }}"></a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('user_index') }}">{{ 'menu.admin' | trans }}</a></li>
                {% endif %}
                <li class="nav-item" data-toggle="tooltip" data-placement="bottom" title="{{ 'menu.disconnect' | trans }}"><a class="nav-link" href="{{ path('fos_user_security_logout') }}"><i class="glyphicon glyphicon-log-out"></i></a></li>
            </ul>
        </div>
    </div>
</nav>
{% endif %}
{% block content %}{% endblock content %}
<script src="{{ asset('strut.bundle.js') }}"></script>
{{ piwik_code() }}
</body>
</html>
