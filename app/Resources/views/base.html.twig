<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" crossorigin="anonymous">
        <script src="//code.jquery.com/jquery-3.1.1.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>-->

        <!--Import Google Icon Font-->
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <style>
            body {
                display: flex;
                min-height: 100vh;
                flex-direction: column;
            }

            main {
                flex: 1 0 auto;
            }

            h2 {
                font-size: 2.5rem;
            }
        </style>
    {% endblock %}
</head>
<body>

<ul id="prezdropdown" class="dropdown-content">


    <li class="divider"></li>

</ul>

<nav class="deep-purple lighten-2">
    <div class="nav-wrapper">
        <a href="{{ path('homepage') }}" class="brand-logo">{{ 'app.name'|trans }}</a>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
            {% if app.user %}
                <li><a href="{{ path('app') }}"><i title="{{ 'menu.newpresentation' | trans }}" class="material-icons">add</i></a></li>
                <li><a href="#!">{{ 'menu.templates' | trans }}</a></li>
                <li><a href="{{ path('fos_user_profile_show') }}">{{ app.user }}</a></li>
                <li><a href="{{ path('fos_user_security_logout') }}"><i title="{{ 'menu.disconnect' | trans }}" class="material-icons">exit_to_app</i></a></li>
            {% else %}
                <li><a href="{{ path('fos_user_security_login') }}">{{ 'menu.login' | trans }}</a></li>
                <li><a href="{{ path('fos_user_registration_register') }}">{{ 'menu.register' | trans }}</a></li>
            {% endif %}
        </ul>
        <ul class="side-nav" id="mobile-demo">
            {% if app.user %}
                <li><a href="">{{ 'menu.templates' | trans }}</a></li>
                <li><a href="{{ path('fos_user_profile_show') }}">{{ app.user }}</a></li>
                <li><a href="{{ path('fos_user_security_logout') }}">{{ 'menu.disconnect' | trans }}</a></li>
            {% else %}
                <li><a href="{{ path('fos_user_security_login') }}">{{ 'menu.login' | trans }}</a></li>
                <li><a href="{{ path('fos_user_registration_register') }}">{{ 'menu.register' | trans }}</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

<main>
    {% block content %}{% endblock content %}
</main>
<footer class="page-footer">
    <div class="footer-copyright">
        <div class="container">
            Â© 2014 Copyright Text
            <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
        </div>
    </div>
</footer>
{% block js %}
<!--Import jQuery before materialize.js-->
<script
    src="https://code.jquery.com/jquery-3.1.1.min.js"
    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
    crossorigin="anonymous"></script>
<script src="https://framasoft.org/nav/lib/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="https://framasoft.org/nav/nav.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
<script>
    $(".button-collapse").sideNav();
</script>
{% endblock js %}
</body>
</html>