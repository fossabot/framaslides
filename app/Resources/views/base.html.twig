<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('strut.bundle.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
<script>
  document.body.classList.add('fade');
</script>
<script src="{{ asset('nav/nav.js') }}" type="text/javascript"></script>
{% if app.user %}
<nav class="navbar navbar-default" style="background-color:#B49CD9;">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}" style="font-size: 25px;">
                {{ 'app.name' | trans() | raw }}
            </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item"><a class="nav-link" href="{{ path('app') }}"><i title="{{ 'menu.newpresentation' | trans }}" class="glyphicon glyphicon-plus"></i></a></li>
                <li class="nav-item"><a class="nav-link " href="{{ path('templates') }}">{{ 'menu.templates' | trans }}</a></li>
                <li class="nav-item"><a class="nav-link glyphicon glyphicon-user" href="{{ path('fos_user_profile_show') }}">{{ app.user }}</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('fos_user_security_logout') }}"><i title="{{ 'menu.disconnect' | trans }}" class="glyphicon glyphicon-log-out"></i></a></li>
            </ul>
        </div>
    </div>
</nav>
{% endif %}
{% block content %}{% endblock content %}
<script>
  document.addEventListener("DOMContentLoaded", function() {
    document.body.classList.remove('fade');
  });
</script>
<script src="{{ asset('strut.bundle.js') }}"></script>
</body>
</html>
