{% extends "base.html.twig" %}

{% block title %}{{ 'user.page_title'|trans }}{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>{{ 'user.edit_user'|trans }}</h4>

            {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}

            <div class="form-group">
                {{ form_label(edit_form.username) }}
                {{ form_errors(edit_form.username) }}
                {{ form_widget(edit_form.username, {'attr':  {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.email) }}
                {{ form_errors(edit_form.email) }}
                {{ form_widget(edit_form.email, {'attr':  {'class': 'form-control'}}) }}
            </div>

            <div class="checkbox">
                {{ form_label(edit_form.enabled) }}
                {{ form_errors(edit_form.enabled) }}
                {{ form_widget(edit_form.enabled) }}
            </div>

            <br/>

            {{ form_widget(edit_form.save, {'attr': {'class': 'btn btn-success'}}) }}
            {{ form_widget(edit_form._token) }}
        {{ form_end(edit_form) }}
        <p>
            {{ form_start(delete_form) }}
                <button {% if app.user.id == user.id %}disabled="disabled"{% endif %} onclick="return confirm('{{ 'user.form.delete_confirm'|trans|escape('js') }}')" type="submit" class="btn btn-danger">{{ 'user.form.delete'|trans }}</button>
            {{ form_end(delete_form) }}
        </p>
        <p><a class="btn btn-primary" href="{{ path('user_index') }}">{{ 'user.form.back_to_list'|trans }}</a></p>
        </div>
    </div>
</div>

{% endblock %}
