{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
    <div class="col-md-6 col-md-offset-3">
            <div class="header">
                <h4 class="modal-title" id="templateModalTitle">{{ 'templates.title' | trans }}</h4>
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ flashMessage|trans }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ flashMessage|trans }}
                    </div>
                {% endfor %}
                <a class="btn btn-default" href="{{ path('presentations') }}"><i class="material-icons vertical-align-middle md-18">keyboard_arrow_left</i> Retour à la liste des présentations</a>
            </div>
            <div class="body">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.template) }}
                    {{ form_errors(form.template) }}
                    {{ form_widget(form.template, {'attr': {'class': 'template-checkboxes'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.public) }}
                    {{ form_errors(form.public) }}
                    {{ form_widget(form.public, {'attr': {'class': 'template-checkboxes'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.groupShares) }}
                    {{ form_errors(form.groupShares) }}
                    {{ form_widget(form.groupShares) }}
                </div>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_rest(form) }}
                </form>
    </div>
</div>
{% endblock %}