{% extends "base.html.twig" %}

{% block title %}{{ 'group.page_title'|trans }}{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="input-field col s12">

                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ 'group.list.name'|trans }}</th>
                        <th>{{ 'group.list.nbMembers'|trans }}</th>
                        <th>{{ 'group.list.action'|trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>{{ group.name }}</td>
                            <td>
                            {% if app.user in group.users and app.user.acceptedInGroup(group) %}
                                {{ 'group.user.inGroup' | transchoice(group.users | length) }}
                            {% else %}
                                {{ 'group.user.notInGroup' | transchoice(group.users | length) }}
                            {% endif %}
                            </td>
                            <td>
                                {% if app.user in group.users and app.user.acceptedInGroup(group) %}
                                <a href="{{ path('group-invitations', { 'group': group.id }) }}" class="btn btn-info"><i class="glyphicon glyphicon-inbox"></i></a>
                                <a href="{{ path('group_leave', { 'group': group.id }) }}" class="btn btn-warning"><i class="glyphicon glyphicon-log-out" title="{{ 'group.leave'|trans }}"></i></a>
                                <a href="{{ path('group_delete', { 'group': group.id }) }}" class="btn btn-danger"><i class="glyphicon glyphicon-trash" title="{{ 'group.delete'|trans }}"></i></a>
                                {% elseif app.user in group.users and not app.user.acceptedInGroup(group) %}
                                    {{ 'group.requests.sent' | trans }}
                                {% else %}
                                <a href="{{ path('group_join', { 'group': group.id }) }}" class="btn btn-default"><i class="glyphicon glyphicon-log-in" title="{{ 'group.join'|trans }}"></i></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="pull-right">
                    {% if groups.getNbPages > 1 %}
                        {{ pagerfanta(groups, 'twitter_bootstrap3', {'proximity': 1}) }}
                    {% endif %}
                </div>
                <p>
                    <a href="{{ path('group_new') }}" class="btn btn-success">{{ 'group.list.create_new_one'|trans }}</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
