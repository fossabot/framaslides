{% extends "base.html.twig" %}

{% block title %}{{ 'user.manage.page_title'|trans }}{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="input-field col s12">
            <p class="help">{{ 'user.manage.description'|trans|raw }}</p>

            <table class="table">
                <thead>
                <tr>
                    <th>{{ 'user.manage.field.username'|trans }}</th>
                    <th>{{ 'user.manage.field.email'|trans }}</th>
                    <th>{{ 'user.manage.field.last_login'|trans }}</th>
                    <th>{{ 'user.manage.action'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{% if user.lastLogin %}{{ user.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-default"><i class="material-icons md-18" title="{{ 'user.manage.edit_action'|trans }}">edit</i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="pull-right">
                {% if users.getNbPages > 1 %}
                    {{ pagerfanta(users, 'twitter_bootstrap3', {'proximity': 1}) }}
                {% endif %}
            </div>
            <p>
                <a href="{{ path('user_new') }}" class="btn btn-success">{{ 'user.manage.create_new_one'|trans }}</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
