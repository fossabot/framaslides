{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .item-hidden {
            transition: opacity .4s ease-out;
            opacity: 0;
            width: 0;
        }
        .play {
            width: 30px;
            height: 30px;
        }

        .play > i {
            line-height: 30px;
        }
        
        .badge, .icon {
            cursor: pointer;
        }
    </style>
{% endblock stylesheets %}

{% block content %}
<div class="container ombre">
    {% if not app.user %}
        {% include 'default/guest.html.twig' %}
    {% else %}
    <div class="row">
        {% for presentation in presentations %}
            <div class="col-xs-12 col-sm-4">
                <div class="card" data-presentation="{{ presentation.id }}">
                    <div class="card-block">
                        <h4 class="card-title"><span class="title">{{ presentation.title }}</span></h4>
                        <p><span class="label label-default versions">{{ 'presentations.nbversions' | transchoice(presentation.versions | length) }}</span> {% if presentation.isTemplate %}<span class="label label-primary">{{ 'presentation.isTemplate' | trans }}</span>{% endif %} {% if presentation.isPublic %}<span class="label label-success">{{ 'presentation.isPublic' | trans }}</span>{% endif %}</p>
                        <p class="card-text">{{ 'presentations.createdAt' | trans({ '%createdAt%': presentation.createdAt | date("d/m/Y") }) }}
                        {{ 'presentations.updatedAt' | trans({ '%updatedAt%': presentation.getLastVersionDate | time_diff }) }}
                        Nb slides : {{ presentation.getNbSlides }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="edit" data-presentation="{{ presentation.title }}"><i class="glyphicon glyphicon-edit"></i></a>
                        <a href="delete-presentation/{{ presentation.title }}" class="delete" data-presentation="{{ presentation.title }}"><i class="material-icons">delete</i></a>
                        <a href="#" class="publish" data-presentation="{{ presentation.id }}"><i class="material-icons">publish</i></a>
                        <a href="{{ path('export-presentation', {'presentation': presentation.id }) }}" class="download-json" data-presentation="{{ presentation.title }}"><i class="material-icons">file_download</i></a>
                        {% if presentation.rendered %}<a class="play btn-floating waves-effect waves-light red right" href="{{ path('preview', {'type': 'impress', 'title': presentation.title }) }}"><i class="material-icons">play_arrow</i></a>{% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="no-presentations-message" style="{{ presentations | length > 0 ? 'display: none;' : '' }}">{{ 'presentations.empty' | trans }}
    {% endif %}
    </div>
</div>
{% include 'default/modals/template.html.twig' %}
{% include 'default/modals/versions.html.twig' %}

{% endblock content %}
