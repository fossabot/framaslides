{% extends "base.html.twig" %}

{% block title %}{{ 'group.requests.page_title'|trans }}{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="input-field col s12">

                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ 'group.requests.username'|trans }}</th>
                        <th>{{ 'group.requests.action'|trans }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for request in requests %}
                        <tr>
                            <td>{{ request.username }}</td>
                            <td>
                                <a class="btn btn-success" href="{{ path('group-activate', {'group': group.id, 'user': request.id, 'accept': 1}) }}"><i class="glyphicon glyphicon-ok"></i></a>
                                <a class="btn btn-danger" href="{{ path('group-activate', {'group': group.id, 'user': request.id, 'accept': 2}) }}"><i class="glyphicon glyphicon-remove"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
